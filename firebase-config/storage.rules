rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Event images - all authenticated users can read, only non-anonymous can upload
    match /events/{eventId}/{imageId} {
      // All authenticated users (including anonymous) can read event images
      allow read: if request.auth != null;
      
      // Only non-anonymous users can upload/delete images
      // Users can only manage images for events they created
      allow write: if request.auth != null 
        && request.auth.token.firebase.sign_in_provider != 'anonymous'
        && firestore.get(/databases/(default)/documents/events/$(eventId)).data.userId == request.auth.uid;
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
